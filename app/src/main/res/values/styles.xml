<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="LightTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#4CAF50</item>
        <item name="ColorText">#000000</item>
        <item name="metaTextColor">#606060</item>
        <item name="ColorBackground">#ffffff</item>
        <item name="android:windowBackground">#FFFFFF</item>
    </style>


    <style name="DarkTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#039BE5</item>
        <item name="ColorText">#ffffff</item>
        <item name="colorAccent">#5E35B1</item>
        <item name="metaTextColor">#aeaeae</item>
        <item name="ColorBackground">@color/appLoadBackground</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
        <item name="android:windowBackground">#202020</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/app_loading</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:colorPrimaryDark">@android:color/transparent</item>
    </style>

    <style name="PreferenceThemeOverlay.v14" tools:ignore="PrivateResource">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textColorSecondary">#FFFFFF</item>
    </style>

</resources>
