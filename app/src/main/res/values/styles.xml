<resources>

    <style name="LightTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">#4CAF50</item>
        <item name="ColorText">#000000</item>
        <item name="metaTextColor">#606060</item>
        <item name="ColorBackground">#ffffff</item>
    </style>


    <style name="DarkTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/design_default_color_primary_dark</item>
        <item name="ColorText">#ffffff</item>
        <item name="metaTextColor">#aeaeae</item>
        <item name="ColorBackground">#070E2E</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/app_loading</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:colorPrimaryDark">@android:color/transparent</item>
    </style>
</resources>
